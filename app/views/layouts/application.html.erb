<!DOCTYPE html>
<html>
  <head>
    <title>BookMyShow</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag "favicon.ico" %>

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="layout">

  <% if flash[:notice] %>
    <div class="flash-notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if current_user %>
    <div class="navbar">
      <h1 class="logo"><%= link_to "BookMyShow", movies_path %></h1>

      <div class="user">
        <% if current_user.profile_picture.attached? %>
          <%= image_tag current_user.profile_picture, class: "image" %>
        <% end %>

        <div class="user-profile">
          <%= current_user.name %><br>
          <small class="user-email"><%= current_user.email %></small>

        </div>
         <div class="profile-button">
          <%= button_to "Edit Profile", edit_user_path(current_user.id), method: :get, class: "edit-button" %>
          <%= button_to "Logout", logout_path, method: :delete %>
         </div>
      </div>
    </div>
  <% end %>

  <%= yield %>
</body>

</html>
