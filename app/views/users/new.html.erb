<div class="login-register">
<div class="auth">
  <h2>Register</h2>

  <%= form_with model: @user, url: users_path, local: true do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Enter your name" %>

      <% @user.errors[:name].each do |error| %>
        <small class="error"><%= error %></small>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Enter your email" %>

      <% @user.errors[:email].each do |error| %>
        <small class="error"><%= error %></small>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Enter strong password" %>

      <% @user.errors[:password].each do |error| %>
        <small class="error"><%= error %></small>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :profile_picture %>
      <%= f.file_field :profile_picture %>
    </div>

    <div class="actions">
      <%= f.submit "Create" %>
    </div>

    <p class="switch-link">
      Already registered?
      <%= link_to "Login", login_path %>
    </p>

  <% end %>
</div>
</div>
