<div class="login-register">
<div class="auth">
  <h2>Login</h2>

  <% if flash[:alert] %>
    <div class="error">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: login_path, method: :post, local: true do |f| %>

    <div class="field">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, placeholder: "Enter your email" %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, placeholder: "Enter your password" %>
    </div>

    <div class="actions">
      <%= submit_tag "Login" %>
    </div>

  <% end %>

  <p class="switch-link">
    New user?
    <%= link_to "Register", register_path %>
  </p>
</div>
</div>
