<h2>Login</h2>
<% if flash[:alert] %>
  <span style="background-color: red;"><%= flash[:alert] %></span>
<% end %>
<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div>
    <%= label_tag :email %><br>
    <%= email_field_tag :email, nil, required: true %>
  </div>
  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password, nil, required: true %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>
<p>
  New user?
  <%= link_to "Register", register_path %>
</p>
