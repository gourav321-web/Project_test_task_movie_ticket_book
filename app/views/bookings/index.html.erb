<h2 class="page-title">My Bookings</h2>

<% if @bookings.any? %>
  <div class="bookings-container">
    <% @bookings.each do |booking| %>
      <div class="booking-card">
        <h3 class="movie-title">
          <%= booking.show.movie.title %>
        </h3>

        <p class="booking-time">
          <%= booking.show.show_time.strftime("%d %b %Y, %I:%M %p") %>
        </p>

        <p>Seats: <strong><%= booking.number_of_seats %></strong></p>
        <p>Amount: <strong>â‚¹ <%= booking.total_price %></strong></p>
        <p>
          Status:
          <span class="status <%= booking.status.downcase %>">
            <%= booking.status %>
          </span>
        </p>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="no-bookings">No bookings yet</p>
<% end %>
